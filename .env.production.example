# Production Environment Variables for Render
# Copy these to Render's Environment tab in the web service settings

# Application
APP_NAME=AniList Sequel Finder
APP_ENV=production
DEBUG=False
SECRET_KEY=change-me-to-a-random-secure-string
API_V1_PREFIX=/api/v1

# Server
HOST=0.0.0.0
PORT=8000

# Database (SQLite for simplicity; use PostgreSQL for production scale)
DATABASE_URL=sqlite+aiosqlite:///./app.db

# AniList OAuth
ANILIST_CLIENT_ID=your_client_id_here
ANILIST_CLIENT_SECRET=
ANILIST_REDIRECT_URI=https://your-domain.onrender.com/auth/callback

# JWT
JWT_SECRET_KEY=change-me-to-a-random-secure-string
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# CORS (comma-separated, or JSON array format)
# Examples:
# - Comma-separated: https://your-domain.onrender.com,https://www.your-domain.onrender.com
# - JSON array: ["https://your-domain.onrender.com","https://www.your-domain.onrender.com"]
CORS_ORIGINS=https://your-domain.onrender.com

# Cache
CACHE_DIR=.cache
CACHE_TTL=86400

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Frontend URL (used for Implicit Grant flow redirect)
FRONTEND_URL=https://your-domain.onrender.com
